# Fastnet Telecom - Otimizações de Performance e SEO
# Arquivo .htaccess para melhorar velocidade, SEO e experiência do usuário

# ===== COMPRESSÃO GZIP/DEFLATE =====
<IfModule mod_deflate.c>
    # Compressão para todos os tipos de arquivo texto
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE image/svg+xml
    
    # Compressão para fontes
    AddOutputFilterByType DEFLATE application/font-woff
    AddOutputFilterByType DEFLATE application/font-woff2
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE font/opentype
    
    # Não comprimir imagens já compactadas
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# ===== CACHE CONTROL E EXPIRES HEADERS =====
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache para imagens (1 ano)
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Cache para CSS e JS (1 mês)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Cache para fontes (1 ano)
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Cache para HTML (1 hora)
    ExpiresByType text/html "access plus 1 hour"
    
    # Cache padrão
    ExpiresDefault "access plus 1 week"
</IfModule>

# ===== REDIRECIONAMENTOS CANÔNICOS (Padrão Ouro) =====
<IfModule mod_rewrite.c>
    RewriteEngine On

    # 1. FORÇAR HTTPS (Redirecionamento CRÍTICO para segurança)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 2. FORÇAR A VERSÃO SEM WWW (Canonicalização da URL)
    RewriteCond %{HTTP_HOST} ^www\.site\.fastnettelecom\.com [NC]
    RewriteRule ^(.*)$ https://site.fastnettelecom.com/$1 [L,R=301]
</IfModule>

# ===== SEGURANÇA E HEADERS =====
<IfModule mod_headers.c>
    # Security Headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache control
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
</IfModule>

# ===== OTIMIZAÇÕES ADICIONAIS =====
# Desabilitar ETags (melhor usar Last-Modified)
FileETag None

# Charset padrão
AddDefaultCharset UTF-8

# Melhorar performance do servidor
<IfModule mod_mime.c>
    # Definir MIME types corretos
    AddType application/javascript .js
    AddType text/css .css
    AddType image/webp .webp
    AddType font/woff .woff
    AddType font/woff2 .woff2
</IfModule>

# Bloquear acesso a arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Redirect específicos para URLs com underscores (converter para hífens)
RedirectMatch 301 ^/(.*?)_(.*)$ /$1-$2

# Error pages customizadas
ErrorDocument 404 /error-404.html
ErrorDocument 500 /error-500.html